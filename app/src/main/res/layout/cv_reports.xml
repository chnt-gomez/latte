<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_default_margin_small"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_txt_title"
        android:textSize="30sp"
        android:text="@string/reports"
        android:drawableStart="@drawable/ic_library_books_white_24dp"
        android:textColor="@android:color/white"
        android:drawablePadding="@dimen/activity_default_margin_big"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_default_margin_small"/>

    <TextView
        android:text="@string/description_reports_card"
        android:textColor="@android:color/white"
        android:paddingStart="@dimen/activity_default_margin_big"
        android:paddingEnd="@dimen/activity_default_margin_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cv_txt_description"
        android:layout_below="@+id/cv_txt_title"
        android:layout_alignParentStart="true" />
</RelativeLayout>