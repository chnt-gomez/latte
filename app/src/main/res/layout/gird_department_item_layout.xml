<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="90sp"
    android:minWidth="90sp"
    android:background="@color/colorDarkGrayBlue"
    android:padding="@dimen/activity_default_margin_small">

    <TextView
        android:text="@string/department"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_department_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_department_name"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_department_detail" />

</RelativeLayout>