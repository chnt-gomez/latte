<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:minHeight="180sp"
        android:minWidth="180sp"
        android:background="@color/colorAccent"
        android:padding="@dimen/activity_default_margin_small">

        <TextView
            android:text="@string/department"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/txt_department_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_department_name"
            android:layout_alignParentStart="true"
            android:id="@+id/txt_department_detail" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_style_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/img_department" />


    </RelativeLayout>

</LinearLayout>