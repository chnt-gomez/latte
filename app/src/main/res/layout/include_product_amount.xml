<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:weightSum="2">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/spn_product_unit"
        android:entries="@array/units_array"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_product_amount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_add_shopping_cart_white_24dp"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_weight="1"/>
</LinearLayout>