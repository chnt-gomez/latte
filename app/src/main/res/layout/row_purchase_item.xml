<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_default_margin_small">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_items_amount"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_default_margin_small"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_item_name"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/txt_items_amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_purchase_amount"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>