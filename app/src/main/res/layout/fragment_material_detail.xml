<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.go.kachin.fragments.MaterialDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName"

        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/edt_material_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@+id/edt_material_name"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/edt_material_unit"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_material_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/ic_add_shopping_cart_white_24dp"
            android:textAlignment="center"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:layout_weight="1"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:text="Material details"
        android:textSize="18sp"
        android:padding="8dp"
        android:drawableLeft="@drawable/ic_timeline_white_24dp"
        android:background="@color/colorPrimary"
        android:drawablePadding="4dp"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_material_details"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/ll_material_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txt_material_details">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average market price:"
                android:layout_weight="2"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_width="match_parent"/>
        </LinearLayout>

        <Button
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:drawablePadding="4dp"
            android:textColor="@android:color/white"
            android:text="Related products"
            android:drawableEnd="@drawable/ic_search_white_24dp"/>

    </LinearLayout>

    <TextView
        android:text="Material settings"
        android:textSize="18sp"
        android:padding="8dp"
        android:drawableLeft="@drawable/ic_settings_white_24dp"
        android:background="@color/colorPrimary"
        android:drawablePadding="4dp"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_material_details"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_material_settings"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/ll_material_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txt_material_settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inventory track"
                android:layout_weight="2"/>
            <CheckBox
                android:textAlignment="center"
                android:id="@+id/chk_inventory_track"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_width="match_parent"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:id="@+id/btn_save"
        android:src="@drawable/ic_done_white_24dp"
        app:layout_anchor="@id/rv_relative_layout"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:id="@+id/btn_undo"
        android:src="@drawable/ic_undo_white_24dp"
        app:layout_anchor="@id/rv_relative_layout"
        app:layout_anchorGravity="bottom|left|start"/>

</android.support.design.widget.CoordinatorLayout>
