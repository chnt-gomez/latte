<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_default_margin_small">

    <TextView
        android:text="Total sales:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/activity_default_margin_small"
        android:drawableStart="@drawable/ic_attach_money_white_24dp"
        android:id="@+id/txt_sale_total" />

    <include layout="@layout/include_space_8dp"/>

    <TextView
        android:text="Minus payments and purchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/activity_default_margin_small"
        android:drawableStart="@drawable/ic_attach_money_white_24dp"
        android:id="@+id/txt_total_purchases" />
    <include layout="@layout/include_space_8dp"/>

    <TextView
    android:text="Today's earnings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/activity_default_margin_small"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_attach_money_white_24dp"
        android:id="@+id/txt_total_earnings" />
    <include layout="@layout/include_space_8dp"/>

    <TextView
        android:text="Recorded tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/activity_default_margin_small"
        android:drawableStart="@drawable/ic_library_books_white_24dp"
        android:id="@+id/txt_sale_ticket" />
    <include layout="@layout/include_space_8dp"/>

    <TextView
        android:text="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/activity_default_margin_small"
        android:drawableStart="@drawable/ic_date_range_white_24dp"
        android:id="@+id/btn_date" />
    <include layout="@layout/include_space_8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/activity_default_margin_small"
        android:drawableStart="@drawable/ic_search_white_24dp"
        android:id="@+id/btn_see_details"
        android:text="@string/see_details" />


</LinearLayout>